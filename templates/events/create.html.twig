{% extends 'base.html.twig' %}

{% block body %}
    <form action="{{path('events_create')}}" method="post">
        <div class="form-group">
            <label>Titulo do Evento</label>
            <input type="text" class="form-control" name="title">
        </div>

        <div class="form-group">
            <label>Descrição Rápida</label>
            <input type="text" class="form-control" name="description">
        </div>

        <div class="form-group">
            <label>Quando Acontece?</label>
            <input type="text" class="form-control" name="event_date">
        </div>

        <button class="btn btn-lg btn-success">Criar Evento</button>
    </form>
{% endblock %}